<Window x:Class="DB_MIA.LoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DB_MIA"
        mc:Ignorable="d"
        Title="LoadScreen" Height="400" Width="300" WindowStartupLocation="CenterScreen" Name="Loading" ResizeMode="NoResize" WindowStyle="None" Background="Blue" Loaded="Loading_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Loaging" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Name="LabelLoading"/>
        <ProgressBar Grid.Row="2" Grid.ColumnSpan="3" Height="50" Width="250" Maximum="100" Minimum="0" Name="ProgressLoading"/>
    </Grid>
</Window>
